<UserControl x:Class="ScottLogic.Controls.PieChart.PieChartLayout"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:c="clr-namespace:ScottLogic.Controls.PieChart">
	<!-- http://cebla5.spaces.live.com/?_c11_BlogPart_BlogPart=blogview&_c=BlogPart&partqs=cat%3DWPF -->
	<Grid>
		<StackPanel Orientation="Horizontal">
			<StackPanel>
				<TextBlock HorizontalAlignment="Center"
						   Text="Registry Files"
						   Margin="5"
						   Padding="0 20 0 0"
						   FontSize="20"
						   Foreground="#00505F"
						   FontWeight="Bold"></TextBlock>
				<c:PiePlotter Margin="10 35 10 0"
							  HorizontalAlignment="Left"
							  VerticalAlignment="Center"
							  Width="200"
							  HoleSize="0.3" />
			</StackPanel>
			<c:Legend Margin="25 10 10 0"
					  HorizontalAlignment="Left" />
		</StackPanel>
	</Grid>
</UserControl>
